			"name": "Auth",
			"item": [
				{
					"name": "Auth Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Pastikan response sukses 200",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"",
									"    if (response.accessToken) {",
									"        // Set ke environment",
									"        pm.environment.set(\"AUTH_TOKEN\", response.accessToken);",
									"",
									"        // Ambil kembali dari environment",
									"        const savedToken = pm.environment.get(\"AUTH_TOKEN\");",
									"",
									"        // Validasi apakah berhasil tersimpan",
									"        pm.test(\"Access token successfully saved to environment\", function () {",
									"            pm.expect(savedToken).to.eql(response.accessToken);",
									"        });",
									"",
									"        console.log(\"Saved Token:\", savedToken);",
									"    } else {",
									"        console.log(\"Token tidak ditemukan di response\");",
									"    }",
									"}"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
